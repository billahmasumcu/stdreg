<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ccffff"
    android:gravity="right"
    android:orientation="vertical"
    android:weightSum="10" >
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:weightSum="5" 
        android:padding="5dip"
        android:layout_weight="1">
		
         <Button
            android:id="@+id/act3_btnHome"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:drawableStart="@drawable/home"
            android:padding="0dip"/>
        
        <TextView
            android:id="@+id/textView1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".6"
            android:text="Year:" />

        <Spinner
            android:id="@+id/act3_class_sp"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1.4" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Semester :" />

        <Spinner
            android:id="@+id/act3_section_sp"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1" 
            android:textAlignment="center"/>

    </LinearLayout>
     <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:weightSum="4" 
        android:paddingLeft="5dp"
        android:layout_weight="1">

        <Spinner
            android:id="@+id/act3_sub_code_sp"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1" 
            android:enabled="false"/>

        <TextView
            android:id="@+id/textView3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.3"
            android:text="Subject Name :" />

        <Spinner
            android:id="@+id/act3_sub_name_sp"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1" 
            android:textAlignment="center"/>

        <Button
            android:id="@+id/act3_showList"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.7"
            android:drawableStart="@drawable/show"
            android:background="@null"
            android:paddingLeft="5dp"
            android:enabled="false"
            />

    </LinearLayout>
<!-- *************************class and section seclation*************************   -->

	 <LinearLayout
	     android:layout_width="match_parent"
	     android:layout_height="0dp"
	     android:layout_weight="1"
	     android:background="#CCC"
	     android:gravity="right"
	     android:orientation="horizontal"
	     android:padding="0dp"
	     android:weightSum="3" >

	     <TextView
	         android:id="@+id/textView4"
	         android:layout_width="0dp"
	         android:layout_height="match_parent"
	         android:text="Name" 
	         android:layout_weight="1"
	         android:layout_margin="1dp"
	         android:gravity="center"
	         android:background="#00ffff"/>

	     <TextView
	         android:id="@+id/textView5"
	         android:layout_width="0dp"
	         android:layout_height="match_parent"
	         android:text="ID" 
	         android:layout_weight="1"
	         android:layout_margin="1dp"
	         android:gravity="center"
	         android:background="#00ffff"/>

	     <Button
	     android:id="@+id/act3_sav"
	     android:layout_width="0dp"
	     android:layout_height="match_parent"
	     android:drawableStart="@drawable/save"
	     android:layout_weight="1"
	     android:background="#00ffff"
	     android:layout_margin="1dp"
	     android:paddingLeft="30dp"
	     android:layout_gravity="center"
	     android:gravity="center"/>

        </LinearLayout>
    <ListView
	     android:id="@+id/listView3"
	     android:layout_width="match_parent"
	     android:layout_height="0dp"
	     android:background="#00ffff" 
	     android:layout_weight="7.1"/>     
		 
</LinearLayout>