<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ccffff"
    android:orientation="vertical"
    android:weightSum="7.5" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal" 
        android:layout_weight="1"
        android:weightSum="4">
        <Button
            android:id="@+id/search_btn_home"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.8"
            android:drawableStart="@drawable/home"
            android:background="@null"
            android:layout_gravity="top"/>
		
       <TextView
             android:id="@+id/search_txt_date"
             android:layout_width="0dp"
             android:layout_height="wrap_content"
             android:layout_weight="2.5"
             android:text="" 
             android:layout_gravity="center"/>
       
        <Button
            android:id="@+id/search_btn_cal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.7"
            android:drawableStart="@drawable/calendar"
            android:background="@null"
            android:layout_gravity="center"/>
        
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal" 
        android:layout_weight="1"
        android:weightSum="4">
        <TextView
             android:id="@+id/textView3"
             android:layout_width="0dp"
             android:layout_height="wrap_content"
             android:layout_weight="0.7"
             android:text="" />
         
		<TextView
            android:id="@+id/textView1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.7"
            android:drawableStart="@drawable/id"
            android:background="@null"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="24dp"
            android:textStyle="italic"
            android:textAlignment="center"/>

        <EditText
            android:id="@+id/search_txt_stdid"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ems="10" 
            android:layout_weight="1.9"
            android:layout_gravity="center">
        </EditText>
        
        <Button
            android:id="@+id/search_btn_show"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.7"
            android:drawableStart="@drawable/show"
            android:background="@null"
            android:layout_gravity="center"/>
    </LinearLayout>
	
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal" 
        android:layout_weight="0.5"
        android:weightSum="4">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Subject Name"
            android:layout_weight="1.5" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Atandence"
            android:layout_weight="1.5" />

    </LinearLayout>
    
    <ListView android:id="@+id/listView6" android:layout_width="fill_parent"
  	android:layout_height="0dp" android:background="#00ffff" android:layout_weight="5"/>

    

</LinearLayout>