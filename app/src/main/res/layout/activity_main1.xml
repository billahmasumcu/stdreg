<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ccffff"
    android:gravity="center"
    android:orientation="vertical"
    android:weightSum="6" >

	<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1" 
        android:orientation="horizontal"
        android:weightSum="4"
        android:padding="10dp">

	    <Space
		    android:layout_width="wrap_content"
		    android:layout_height="match_parent" 
		    android:layout_weight="3"/>
	  
	    
		<Button
		    android:id="@+id/act1_btnHome"
		    android:layout_width="0dip"
		    android:layout_height="wrap_content"
		    android:background="@null"
		    android:drawableStart="@drawable/home"
		    android:gravity="center" 
		    android:layout_weight="1"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:background="#00ffec"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="4"
        android:padding="10dp">
		<TextView
            android:id="@+id/textView1"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/user" 
            android:layout_weight="1"
            android:gravity="center"
            android:paddingLeft="10dip"/>
        <EditText
            android:id="@+id/txt_std_name"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:ems="10"
            android:inputType="textCapWords" 
            android:layout_weight="3"
            android:hint="Full name"
            android:capitalize="words">

            <requestFocus />
        </EditText>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1" 
        android:orientation="horizontal"
        android:weightSum="4"
        android:padding="10dp">
			<TextView
	            android:id="@+id/textView2"
	            android:layout_width="0dip"
	            android:layout_height="wrap_content"
	            android:text="Class :" 
	            android:layout_weight="1"
	            android:gravity="center"
	            android:textSize="18dp"/>
			<Spinner
			    android:id="@+id/spi_class"
			    android:layout_width="0dip"
			    android:layout_height="wrap_content"
			    android:layout_weight="1"/>
			
			<TextView
	            android:id="@+id/textView3"
	            android:layout_width="0dip"
	            android:layout_height="wrap_content"
	            android:text="Section :" 
	            android:layout_weight="1"
	            android:gravity="center"
	            android:textSize="18dp"/>
			<Spinner
			    android:id="@+id/spi_section"
			    android:layout_width="0dip"
			    android:layout_height="wrap_content"
			    android:layout_weight="1"/>
    </LinearLayout>


	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:background="#00ffec"
		android:layout_weight="1"
		android:orientation="horizontal"
		android:weightSum="4"
		android:padding="10dp">

		<TextView
			android:id="@+id/textView60"
			android:layout_width="0dip"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:drawableStart="@drawable/id"
			android:gravity="center"
			android:paddingLeft="10dip" />

		<EditText
			android:id="@+id/txt_id"
			android:layout_width="0dip"
			android:layout_height="wrap_content"
			android:layout_weight="3"
			android:ems="10"
			android:hint="Student ID"
			android:maxLength="11"/>

	</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:background="#00ffec" 
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="4"
        android:padding="10dp">

        <TextView
            android:id="@+id/textView6"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/contact" 
            android:layout_weight="1"
            android:gravity="center"
            android:paddingLeft="10dip"/>

        <EditText
            android:id="@+id/txt_ph"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:ems="10"
            android:inputType="phone|number" 
            android:maxLength="11"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="4"
        android:padding="10dp">
		<TextView
            android:id="@+id/textView7"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/mail_add" 
            android:layout_weight="1"
            android:gravity="center"
            android:paddingLeft="10dip"/>

		<EditText
		    android:id="@+id/txt_mail"
		    android:layout_width="0dip"
		    android:layout_height="wrap_content"
		    android:ems="10"
		    android:inputType="textEmailAddress" 
		    android:layout_weight="3"/>

    </LinearLayout>

		
 
	    <Button
	        android:id="@+id/btnSave"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:background="@null"
	        android:enabled="false"/>
</LinearLayout>