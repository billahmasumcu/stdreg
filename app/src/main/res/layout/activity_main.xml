<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ccffff"
    android:orientation="vertical" 
    android:weightSum="5">
    	<Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5" />

    	<LinearLayout
		    android:layout_width="match_parent"
		    android:layout_height="0dip"
		    android:layout_weight="1"
		    android:orientation="horizontal" 
		    android:weightSum="2"
		    android:padding="15dp">
		    	<Button
				    android:id="@+id/list"
				    android:layout_width="0dip"
				    android:layout_height="wrap_content"
				    android:layout_weight="1"
				    android:drawableStart="@drawable/std_list"
				    android:background="@null"
		            android:paddingLeft="45dp"/>
		    	<Button
		    	    android:id="@+id/reg"
		    	    android:layout_width="0dip"
				    android:layout_height="wrap_content"
		    	    android:layout_weight="1"
		    	    android:drawableStart="@drawable/n_std_reg" 
		    	    android:background="@null"
		            android:paddingLeft="45dp"/>
		</LinearLayout>
    
        <LinearLayout
            android:layout_width="match_parent"
		    android:layout_height="0dip"
		    android:layout_weight="1"
            android:orientation="horizontal" 
		    android:weightSum="2"
		    android:padding="15dp">
		    	<Button
		            android:id="@+id/att"
		            android:layout_width="0dip"
		            android:layout_height="match_parent"
		            android:layout_weight="1"
		            android:drawableStart="@drawable/std_att" 
		            android:background="@null"
		            android:paddingLeft="45dp"/>

		        <Button
		            android:id="@+id/attR"
		            android:layout_width="0dip"
		            android:layout_height="match_parent"
		            android:layout_weight="1"
		            android:drawableStart="@drawable/std_att_list" 
		            android:background="@null"
		            android:paddingLeft="45dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
		    android:layout_height="0dip"
		    android:layout_weight="1"
            android:orientation="horizontal" 
            android:weightSum="2"
            android:padding="15dp">
		         <Button
		            android:id="@+id/cl_setting"
		            android:layout_width="0dip"
		            android:layout_height="match_parent"
		            android:layout_weight="1"
		            android:drawableStart="@drawable/class_m"  
		            android:background="@null"
		            android:paddingLeft="45dp"/>

		         <Button
		             android:id="@+id/subList"
		             android:layout_width="0dp"
		             android:layout_height="wrap_content"
		             android:layout_weight="1"
		             android:drawableStart="@drawable/b_list" 
		             android:background="@null"
		             android:paddingLeft="45dp"/>

        </LinearLayout>
		<LinearLayout
            android:layout_width="match_parent"
		    android:layout_height="0dip"
		    android:layout_weight="1"
            android:orientation="horizontal" 
            android:weightSum="2"
            android:padding="12dp">
		        <Button
		            android:id="@+id/exit"
		            android:layout_width="0dp"
		            android:layout_height="wrap_content"
		            android:layout_weight="1"
		            android:drawableStart="@drawable/out" 
		            android:paddingLeft="45dp"
		            android:background="@null"/>
		        <Button
		            android:id="@+id/stdattbyid"
		            android:layout_width="0dp"
		            android:layout_height="wrap_content"
		            android:layout_weight="1"
		            android:drawableStart="@drawable/ind_att" 
		            android:paddingLeft="45dp"
		            android:background="@null"/>
		        
		  </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5" />

</LinearLayout>